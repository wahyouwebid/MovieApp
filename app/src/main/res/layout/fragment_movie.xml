<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:gravity="center"
        android:layout_marginTop="@dimen/_26sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_20ssp"
        android:text="@string/title_movie"
        android:textStyle="bold"
        android:fontFamily="@font/ff_cocon"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@drawable/bg_rounded_top"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.wahyouwebid.app.common.uikit.UIKitRecyclerView
                android:id="@+id/uikit_now_playing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_360sdp"
                app:layout_constraintTop_toTopOf="parent"/>

            <com.wahyouwebid.app.common.uikit.UIKitRecyclerView
                android:id="@+id/uikit_popular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                app:layout_constraintTop_toBottomOf="@+id/uikit_now_playing"/>

            <com.wahyouwebid.app.common.uikit.UIKitRecyclerView
                android:id="@+id/uikit_top_rated"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_240sdp"
                app:layout_constraintTop_toBottomOf="@+id/uikit_popular"/>

            <com.wahyouwebid.app.common.uikit.UIKitShimmer
                android:id="@+id/uikit_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_25sdp"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>