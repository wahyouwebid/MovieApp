<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:textSize="@dimen/_16ssp"
        android:background="@drawable/bg_placeholder"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/colorTextPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/iv_thumbnail"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_210sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_placeholder"
        android:layout_marginStart="@dimen/_25sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        app:shapeAppearanceOverlay="@style/smallRounded" />

    <View
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail"/>

    <View
        android:id="@+id/tv_rating"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/bg_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"/>

    <View
        android:id="@+id/iv_thumbnail2"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_210sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_placeholder"
        android:layout_marginStart="@dimen/_25sdp"
        app:layout_constraintStart_toEndOf="@+id/iv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        app:shapeAppearanceOverlay="@style/smallRounded" />

    <View
        android:id="@+id/tv_title2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail2"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail2"
        app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail2"/>

    <View
        android:id="@+id/tv_rating2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/bg_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail2"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail2"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2"/>

    <View
        android:id="@+id/iv_thumbnail3"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_210sdp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_placeholder"
        android:layout_marginStart="@dimen/_25sdp"
        app:layout_constraintStart_toEndOf="@+id/iv_thumbnail2"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        app:shapeAppearanceOverlay="@style/smallRounded" />

    <View
        android:id="@+id/tv_title3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_16sdp"
        android:background="@drawable/bg_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail3"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail3"
        app:layout_constraintTop_toBottomOf="@+id/iv_thumbnail3"/>

    <View
        android:id="@+id/tv_rating3"
        android:layout_width="0dp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/bg_placeholder"
        app:layout_constraintEnd_toEndOf="@+id/iv_thumbnail3"
        app:layout_constraintStart_toStartOf="@+id/iv_thumbnail3"
        app:layout_constraintTop_toBottomOf="@+id/tv_title3"/>
</androidx.constraintlayout.widget.ConstraintLayout>